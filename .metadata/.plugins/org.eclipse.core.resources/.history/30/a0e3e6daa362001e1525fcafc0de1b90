package com.example.OnetableTosecondtabledata.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.OnetableTosecondtabledata.model.Department;
import com.example.OnetableTosecondtabledata.model.Employee;
import com.example.OnetableTosecondtabledata.serviceImpl.DepartmentServiceImpl;
@RestController
public class DataController {
	
	@Autowired
	private DepartmentServiceImpl ser;
	
	@PostMapping("/empsave")
	public Employee createEmp(@RequestBody Employee emp) {
		return ser.saveEmployee(emp);
		
	}

	@PostMapping("/depsave")
	public Department createdep(@RequestBody Department dep) {
		return ser.saveDepartment(dep);
		
	}
	
	@GetMapping("/transfer")
	public void getAndinsert() {
	ser.transferdata();
}
}